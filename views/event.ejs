<head>
    <title>Events</title>
    <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
  <% include partials/nav.ejs %>
  <div id="container">
    <img id="fighter" src="/assets/images/fighter.jpg" width="350" height="200" />
    <ul id="eventsForm">
      <li><%= data.name %></li>
      <li><%= data.type %></li>
      <li><%= data.host %></li>
      <li><%= data.date %></li>
      <li><%= data.detail %></li>
